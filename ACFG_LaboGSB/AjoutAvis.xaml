<Window x:Class="ACFG_LaboGSB.AjoutAvis"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ACFG_LaboGSB"
        mc:Ignorable="d"
        Title="AjoutAvis" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="PanelTop" Content="Ajout avis" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#FFF1F1F1" FontSize="30" Margin="0,0,0,362" Background="#FF4A4741"/>
        <DatePicker x:Name="DP_AVI_DATE" HorizontalAlignment="Left" Height="30" Margin="400,106,0,0" VerticalAlignment="Top" Width="182"/>
        <Label x:Name="Date" Content="Date : " HorizontalAlignment="Left" Height="30" Margin="212,106,0,0" VerticalAlignment="Top" Width="129"/>
        <Label x:Name="Commentaire" Content="Commentaire : " HorizontalAlignment="Left" Height="30" Margin="212,165,0,0" VerticalAlignment="Top" Width="129"/>
        <Button Content="Retour" HorizontalAlignment="Left" Margin="212,377,0,0" VerticalAlignment="Top" FontSize="12" Width="86" Background="#FFFFB8B8" Click="Button_Click"/>
        <Button x:Name="Btn_AjoutAvis" Content="Ajouter" HorizontalAlignment="Left" Margin="400,377,0,0" VerticalAlignment="Top" FontSize="12" Width="94" Background="#FFCFFAFF" Click="Btn_AjoutAvis_Click"/>
        <TextBox x:Name="TBX_Commentaire" HorizontalAlignment="Left" Height="104" Margin="400,0,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Center" Width="182"/>
        <Label x:Name="Praticien" Content="Praticien :" HorizontalAlignment="Left" Margin="217,282,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbBoxDisplay" HorizontalAlignment="Left" Margin="432,282,0,0" VerticalAlignment="Top" Width="118"/>
    </Grid>
</Window>
